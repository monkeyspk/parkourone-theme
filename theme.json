{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		},
		"color": {
			"defaultPalette": false,
			"palette": [
				{ "slug": "black", "color": "#000000", "name": "Schwarz" },
				{ "slug": "white", "color": "#ffffff", "name": "Weiß" },
				{ "slug": "gray-100", "color": "#f5f5f7", "name": "Grau 100" },
				{ "slug": "gray-500", "color": "#86868b", "name": "Grau 500" },
				{ "slug": "gray-900", "color": "#1d1d1f", "name": "Grau 900" }
			]
		},
		"typography": {
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
					"slug": "system",
					"name": "System"
				}
			],
			"fontSizes": [
				{ "slug": "small", "size": "0.875rem", "name": "Klein" },
				{ "slug": "medium", "size": "1.125rem", "name": "Mittel" },
				{ "slug": "large", "size": "1.5rem", "name": "Groß" },
				{ "slug": "x-large", "size": "2.5rem", "name": "Extra Groß" },
				{ "slug": "xx-large", "size": "4rem", "name": "Riesig" }
			]
		},
		"spacing": {
			"units": ["rem", "%", "vw", "vh"]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--gray-900)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"elements": {
			"heading": {
				"typography": { "fontWeight": "600", "lineHeight": "1.2" },
				"color": { "text": "var(--wp--preset--color--black)" }
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--black)",
					"text": "var(--wp--preset--color--white)"
				},
				"border": { "radius": "100px" }
			},
			"link": {
				"color": { "text": "var(--wp--preset--color--black)" },
				"typography": { "textDecoration": "none" }
			}
		}
	},
	"templateParts": [
		{ "name": "header", "title": "Header", "area": "header" },
		{ "name": "footer", "title": "Footer", "area": "footer" }
	]
}
