    "render": "file:./render.php",
    "attributes": {
        "headline": { "type": "string", "default": "Nächste Probetrainings" },
        "buttonText": { "type": "string", "default": "Jetzt buchen" }
    },
    "supports": { "align": ["full", "wide"], "html": false }
