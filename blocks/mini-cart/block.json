{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "parkourone/mini-cart",
	"version": "1.0.0",
	"title": "Mini Warenkorb",
	"category": "parkourone",
	"icon": "cart",
	"description": "Kompakter Side-Cart mit Slide-out Animation",
	"keywords": ["cart", "warenkorb", "mini", "side", "sidebar"],
	"supports": {
		"html": false,
		"multiple": false
	},
	"attributes": {
		"position": {
			"type": "string",
			"default": "right",
			"enum": ["left", "right"]
		},
		"showOnAdd": {
			"type": "boolean",
			"default": true
		},
		"triggerStyle": {
			"type": "string",
			"default": "icon",
			"enum": ["icon", "button", "text"]
		}
	},
	"textdomain": "parkourone",
	"editorScript": "file:./editor.js",
	"editorStyle": "file:./editor.css",
	"render": "file:./render.php",
	"style": "file:./style.css",
	"viewScript": "file:./view.js"
}
