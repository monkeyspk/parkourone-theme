{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "parkourone/angebote-grid",
	"version": "1.0.0",
	"title": "Angebote Grid",
	"category": "parkourone-blocks",
	"icon": "grid-view",
	"description": "Zeigt alle Angebote als Grid mit Filter und Modal-Details.",
	"keywords": ["angebote", "workshops", "events", "grid", "filter"],
	"textdomain": "parkourone",
	"editorScript": "file:./index.js",
	"style": "file:./style.css",
	"viewScript": "file:./view.js",
	"render": "file:./render.php",
	"attributes": {
		"showFilter": { "type": "boolean", "default": true },
		"columns": { "type": "number", "default": 3 }
	},
	"supports": { "align": ["full", "wide"], "html": false }
}
